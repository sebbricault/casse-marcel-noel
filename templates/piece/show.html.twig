{% extends 'base.html.twig' %}

{% block title %}Piece{% endblock %}

{% block body %}
 <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <img src="{{ asset('images/vehicule/' ~ piece.imageName) }}" alt="Véhicule Image" class="img-fluid rounded shadow">
            </div>
            <div class="col-md-6">
                <h1 class="mb-4">{{ piece.nom }} {{ piece.idVehicule.marque }}</h1>
                <table class="table table-bordered">
                    <tbody>
                       <tr>
                <th>Id</th>
                <td>{{ piece.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ piece.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ piece.Description }}</td>
            </tr>
            <tr>
                <th>stock</th>
                <td>{{ piece.QuantiteEnStock }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ piece.prix }} €</td>
            </tr>
                    </tbody>
                </table>
                <a href="{{ path('app_piece_index') }}" class="btn btn-secondary mb-2">Retour à la liste</a>
                <a href="{{ path('app_piece_edit', {'id': piece.id}) }}" class="btn btn-primary mb-2">Éditer</a>
                {{ include('piece/_delete_form.html.twig', {'button_class': 'btn-danger mb-2'}) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .table th, .table td {
            border-top: none;
        }
        .btn {
            border-radius: 0;
        }
    </style>
{% endblock %}