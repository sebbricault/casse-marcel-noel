{% extends 'base.html.twig' %}

{% block title %}Vehicule{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <img src="{{ asset('images/vehicule/' ~ vehicule.imageName) }}" alt="Véhicule Image" class="img-fluid rounded shadow">
            </div>
            <div class="col-md-6">
                <h1 class="mb-4">{{ vehicule.marque }} {{ vehicule.annee }}</h1>
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ vehicule.id }}</td>
                        </tr>
                        <tr>
                            <th>Marque</th>
                            <td>{{ vehicule.marque }}</td>
                        </tr>
                        <tr>
                            <th>Annee</th>
                            <td>{{ vehicule.annee }}</td>
                        </tr>
                        <tr>
                            <th>Statut</th>
                            <td>{{ vehicule.satut }}</td>
                        </tr>
                    </tbody>
                </table>
                <a href="{{ path('app_vehicule_index') }}" class="btn btn-secondary mb-2">Retour à la liste</a>
                <a href="{{ path('app_vehicule_edit', {'id': vehicule.id}) }}" class="btn btn-primary mb-2">Éditer</a>
                {{ include('vehicule/_delete_form.html.twig', {'button_class': 'btn-danger mb-2'}) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .table th, .table td {
            border-top: none;
        }
        .btn {
            border-radius: 0;
        }
    </style>
{% endblock %}
